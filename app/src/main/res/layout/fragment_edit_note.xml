<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/cd_edit_note"
    tools:context=".presentation.notes.EditNoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_back"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                app:icon="@drawable/ic_baseline_arrow_back_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_save"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                app:icon="@drawable/ic_baseline_check_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="36dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_edit_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_note_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:hint="@string/et_note_title_hint"
                    android:maxLength="18"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_note_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="start|top"
                    android:hint="@string/et_note_description_hint"
                    android:minHeight="60dp"
                    android:textSize="18sp"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <RadioGroup
            android:id="@+id/rg_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:checkedButton="@id/rb_color6"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_color0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/note_0"
                    android:button="@null"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_color1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/note_1"
                    android:button="@null" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_color2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/note_2"
                    android:button="@null" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_color3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/note_3"
                    android:button="@null" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_color4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/note_4"
                    android:button="@null" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_color5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/note_5"
                    android:button="@null" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_color6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/note_6"
                    android:button="@null" />

            </com.google.android.material.card.MaterialCardView>

        </RadioGroup>

    </LinearLayout>


</ScrollView>